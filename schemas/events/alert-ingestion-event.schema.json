{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/timothymeyers/zte-agentic-soc/schemas/events/alert-ingestion-event.schema.json",
  "title": "AlertIngestionEvent",
  "description": "Event schema for alert ingestion from Microsoft Sentinel/Graph Security API. Published to Event Hubs when new alerts are ingested into the Agentic SOC system.",
  "type": "object",
  "required": ["eventId", "eventType", "eventTimestamp", "alert"],
  "properties": {
    "eventId": {
      "type": "string",
      "description": "Unique event identifier (UUID)",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "eventType": {
      "type": "string",
      "const": "alert.ingestion",
      "description": "Event type identifier"
    },
    "eventVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Event schema version"
    },
    "eventTimestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event generation timestamp in ISO 8601 format"
    },
    "source": {
      "type": "object",
      "description": "Event source information",
      "required": ["system", "component"],
      "properties": {
        "system": {
          "type": "string",
          "const": "AgenticSOC",
          "description": "Source system name"
        },
        "component": {
          "type": "string",
          "const": "AlertIngestionService",
          "description": "Component that generated the event"
        }
      }
    },
    "alert": {
      "type": "object",
      "description": "Alert data in Microsoft Sentinel/Graph Security format (reference: alert-triage-agent-input.schema.json)",
      "required": ["alertId", "source", "severity", "entities", "timestamp"],
      "properties": {
        "alertId": {"type": "string"},
        "source": {"type": "string"},
        "severity": {"type": "string"},
        "title": {"type": "string"},
        "description": {"type": "string"},
        "entities": {"type": "array"},
        "timestamp": {"type": "string", "format": "date-time"},
        "correlationId": {"type": "string"},
        "tactics": {"type": "array"},
        "techniques": {"type": "array"},
        "rawData": {"type": "object"}
      }
    },
    "metadata": {
      "type": "object",
      "description": "Event metadata",
      "properties": {
        "correlationId": {
          "type": "string",
          "description": "Correlation ID for tracking related events"
        },
        "sourceUrl": {
          "type": "string",
          "description": "URL to alert in source system"
        }
      }
    }
  }
}
