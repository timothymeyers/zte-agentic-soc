# Azure AI Foundry Configuration
AZURE_AI_PROJECT_CONNECTION_STRING=<your-ai-foundry-connection-string>
AZURE_AI_FOUNDRY_ENDPOINT=<your-ai-foundry-endpoint>
AZURE_AI_DEPLOYMENT_NAME=gpt-4.1-mini

# Azure Authentication
AZURE_TENANT_ID=<your-tenant-id>
AZURE_CLIENT_ID=<your-managed-identity-client-id>
AZURE_CLIENT_SECRET=<only-for-local-dev>

# Azure Cosmos DB
COSMOS_DB_ENDPOINT=<your-cosmos-db-endpoint>
COSMOS_DB_DATABASE=agentic-soc
COSMOS_DB_KEY=<only-for-local-dev>

# Azure Event Hubs
EVENT_HUB_NAMESPACE=<your-eventhub-namespace>
EVENT_HUB_NAME=alert-ingestion
EVENT_HUB_CONNECTION_STRING=<only-for-local-dev>

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=<your-appinsights-connection-string>

# Azure AI Search (Knowledge Base)
AZURE_SEARCH_ENDPOINT=<your-search-endpoint>
AZURE_SEARCH_KEY=<only-for-local-dev>
AZURE_SEARCH_INDEX_ATTACKS=attack-scenarios
AZURE_SEARCH_INDEX_INCIDENTS=historical-incidents
AZURE_SEARCH_INDEX_INTEL=threat-intelligence

# Mock Data Configuration
MOCK_DATA_PATH=./mock-data
MOCK_STREAM_INTERVAL_SECONDS=15
MOCK_DATA_REPLAY_MODE=checkpoint

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PORT=8000
API_HOST=0.0.0.0

# Feature Flags
ENABLE_HUMAN_APPROVAL=true
ENABLE_AUDIT_LOGGING=true
AUTO_APPROVE_LOW_RISK=true

# Data Retention (days)
ALERT_TTL_DAYS=5
INCIDENT_TTL_DAYS=30
AUDIT_LOG_TTL_DAYS=365
