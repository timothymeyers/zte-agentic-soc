# =============================================================================
# Agentic SOC - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control - it contains secrets

# =============================================================================
# Azure Authentication
# =============================================================================
# Azure Tenant ID (required)
AZURE_TENANT_ID=your-tenant-id

# Azure Subscription ID (required)
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Azure Resource Group (required)
AZURE_RESOURCE_GROUP=asoc-zte-rg

# Azure Location/Region (required)
AZURE_LOCATION=eastus2

# Azure Client ID for Service Principal (optional - use Managed Identity if available)
AZURE_CLIENT_ID=your-client-id

# Azure Client Secret for Service Principal (optional - use Managed Identity if available)
# AZURE_CLIENT_SECRET=your-client-secret

# =============================================================================
# Microsoft Foundry Configuration
# =============================================================================
# Microsoft Foundry Project Endpoint (required)
# Format: https://<workspace-name>.services.ai.azure.com/api/projects/<project-name>
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=https://asoc-foundry.services.ai.azure.com/api/projects/asoc

# Microsoft Foundry Project Name (required)
AZURE_AI_PROJECT_NAME=asoc

# Microsoft Foundry Account/Workspace Name (required)
AZURE_AI_ACCOUNT_NAME=asoc-foundry

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
# Azure OpenAI Endpoint (required)
AZURE_OPENAI_ENDPOINT=https://asoc-foundry.openai.azure.com/openai/v1/

# Azure OpenAI API Version (required)
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure OpenAI Model Deployment Name (required)
# MVP: gpt-4.1-mini for all agents
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1-mini

# Embedding Model Deployment Name (optional - for future RAG implementation)
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large

# =============================================================================
# Azure Search Configuration (Future RAG Implementation)
# =============================================================================
# Azure AI Search Endpoint (optional)
AZURE_SEARCH_ENDPOINT=https://asoc-ais-rag.search.windows.net

# Azure AI Search Index Name (optional)
AZURE_SEARCH_INDEX_NAME=attack-scenarios

# =============================================================================
# Azure Storage Configuration
# =============================================================================
# Storage Account Name (optional - for mock data and checkpoints)
# AZURE_STORAGE_ACCOUNT_NAME=asocstorageaccount

# Storage Container Name for Mock Data (optional)
# AZURE_STORAGE_CONTAINER_NAME=mock-data

# =============================================================================
# Azure Cosmos DB Configuration
# =============================================================================
# Cosmos DB Endpoint (optional - for agent state and audit logs)
# AZURE_COSMOS_ENDPOINT=https://asoc-cosmos.documents.azure.com:443/

# Cosmos DB Database Name (optional)
# AZURE_COSMOS_DATABASE_NAME=agentic-soc

# =============================================================================
# Azure Key Vault Configuration
# =============================================================================
# Key Vault URL (optional - for secrets management)
# AZURE_KEYVAULT_URL=https://asoc-keyvault.vault.azure.net/

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application Port (for FastAPI web UI)
APP_PORT=8000

# =============================================================================
# Mock Data Configuration
# =============================================================================
# Mock Data Directory (relative to project root)
MOCK_DATA_DIR=mock-data

# Mock Data Streaming Interval (seconds) - default 15s
MOCK_DATA_INTERVAL=15

# Mock Data Checkpoint File (for replay functionality)
MOCK_DATA_CHECKPOINT_FILE=.mock_data_checkpoint.json

# =============================================================================
# Agent Configuration
# =============================================================================
# Default Agent Temperature (0.0 - 1.0)
AGENT_TEMPERATURE=0.3

# Default Agent Max Tokens
AGENT_MAX_TOKENS=4096

# Agent Timeout (seconds)
AGENT_TIMEOUT=60

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Application Insights Connection String (optional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;...

# Enable OpenTelemetry Tracing (true/false)
ENABLE_OPENTELEMETRY=false

# =============================================================================
# Feature Flags
# =============================================================================
# Enable Human Approval Workflow (true/false)
ENABLE_APPROVAL_WORKFLOW=true

# Enable Threat Intelligence Agent (true/false)
ENABLE_THREAT_INTEL_AGENT=true

# Enable Threat Hunting Agent (true/false)
ENABLE_THREAT_HUNTING_AGENT=true

# Enable Incident Response Agent (true/false)
ENABLE_INCIDENT_RESPONSE_AGENT=true

# =============================================================================
# Security Configuration
# =============================================================================
# Data Retention Period (days) - MVP default: 5 days
DATA_RETENTION_DAYS=5

# Enable Audit Logging (true/false)
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Microsoft Sentinel Configuration (Future Production Integration)
# =============================================================================
# Sentinel Workspace ID (optional - for production integration)
# SENTINEL_WORKSPACE_ID=your-workspace-id

# Sentinel Workspace Name (optional)
# SENTINEL_WORKSPACE_NAME=your-workspace-name

# =============================================================================
# Microsoft Defender XDR Configuration (Future Production Integration)
# =============================================================================
# Defender Tenant ID (optional - typically same as AZURE_TENANT_ID)
# DEFENDER_TENANT_ID=your-tenant-id

# =============================================================================
# Microsoft Entra ID Configuration (Future Production Integration)
# =============================================================================
# Entra ID Graph API Endpoint (optional)
# GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0
